{
    "name": "Teams",
    "description": "Dzieli dane przypisując osobne dla każdego zespołu",
    "version": "1.0",
    "backendRoute": [{
            "url": "getTeams",
            "parameters": ["token"]
        },
        {
            "url": "savePositionOnField",
            "parameters": ["token", "pos_x", "pos_y", "usid"],
            "auth": ["KOORD", "TRENER", "STAFF"]
        },
        {
            "url": "getUserFromTeam",
            "parameters": ["tmid"]
        },
        {
            "url": "changeCollection",
            "parameters": ["tmid", "val", "type"]
        },
        {
            "url": "getAllTeams"
        },
        {
            "url": "getAllMastersFromTeam",
            "parameters": ["tmid"]
        },
        {
            "url": "deleteTeam",
            "parameters": ["token", "id"],
            "auth": ["KOORD", "TRENER", "STAFF"]
        },
        {
            "url": "addTeam",
            "parameters": ["name", "weight"],
            "auth": ["KOORD", "TRENER", "STAFF"]
        },
        {
            "url": "deleteMasterFromTeam",
            "parameters": ["mid", "tmid"],
            "auth": ["KOORD", "TRENER", "STAFF"]
        },
        {
            "url": "addMasterToTeam",
            "parameters": ["mid", "tmid"],
            "auth": ["KOORD", "TRENER", "STAFF"]
        },
        {
            "url": "changeWeightTeam",
            "parameters": ["weight", "tmid"],
            "auth": ["KOORD", "TRENER", "STAFF"]
        }
    ],
    "jsControllers": ["teamsMenagerController", "masterMenagerController"],
    "frontendRoute": [{
            "url": "teamsMenager",
            "templateSrc": "teamsMenager.html",
            "controllerName": "teamsMenagerController"
        },
        {
            "url": "masterMenager",
            "templateSrc": "masterMenager.html",
            "controllerName": "masterMenagerController"
        }
    ],
    "anchor": [{
            "destination": "leftMenu",
            "content": {
                "weight": 1,
                "html": "<li class='row teamSelect'><div class='input-field col s12'><select id='teamSelect' class='white-text'><option value='' disabled selected>Wybierz drużynę</option></select><label class='centered'>Wybierz drużynę</label></div></li>"
            }
        },
        {
            "destination": "leftMenu",
            "content": {
                "link": {
                    "label": "Menadżer drużyn",
                    "url": "#!/teamsMenager",
                    "icon": "fa fa-address-card-o fa-fw",
                    "additional": "ng-show=\"user.role == 'KOORD'\""
                }
            }
        },
        {
            "destination": "leftMenu",
            "content": {
                "link": {
                    "label": "Menadżer trenerów",
                    "url": "#!/masterMenager",
                    "icon": "fa fa-user-secret fa-fw",
                    "additional": "ng-show=\"user.role == 'KOORD'\""
                }
            }
        }
    ]
}
